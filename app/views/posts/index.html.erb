<% content_for :title, "Posts" %>
<div class="min-h-screen bg-gray-900 text-gray-100 p-2 font-mono">
  <h1 class="text-2xl font-bold mb-6 text-green-400 font-mono overflow-hidden whitespace-nowrap animate-typing blink">
    Witaj na blogu!<span class="animate-blink">â–ˆ</span>
  </h1>
  <div id="posts" class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-gray-800 border border-gray-700 rounded shadow-inner p-4 hover:bg-gray-700 transition-colors duration-200">
        <h2 class="text-xl font-bold text-cyan-400 mb-1">> <%= post.title %></h2>
        <p class="text-gray-500 text-sm mb-2">
          Utworzono: <%= post.created_at.strftime("%d-%m-%Y %H:%M:%S") %>
        </p>
        <p class="text-gray-300 mb-2 line-clamp-3"><%= post.body %></p>
        <p class="text-sm text-gray-500 mb-2">
          [ Opublikowany: <%= post.published ? "TAK" : "NIE" %> ]
        </p>
        <div class="flex space-x-4 text-green-300">
          <%= link_to "[ZOBACZ]", post, class: "hover:text-green-400" %>
          <%= link_to "[EDYTUJ]", edit_post_path(post), class: "hover:text-green-400" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
