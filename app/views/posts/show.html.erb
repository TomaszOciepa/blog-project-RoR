<div class="min-h-screen bg-gray-900 text-gray-100 p-8 font-mono">

<% if user_signed_in? && (current_user.writer? || current_user.admin?) %>
    <p>
      <%= button_to "🗑️ [Usuń post]", post_path(@post), method: :delete,
          form: { onsubmit: "return confirm('Na pewno chcesz usunąć ten post?');" },
          class: "w-full text-left px-3 py-2 rounded text-red-500 hover:bg-gray-700 hover:text-red-400 font-mono font-semibold"
      %>
    </p>

    <p>
      <%= link_to "✏️ [Edytuj post]", edit_post_path(@post), class: "block px-3 py-2 rounded hover:bg-gray-700 hover:text-green-400" %>
    </p>
<% end %>

  <!-- Nagłówek posta z animacją -->
  <article class="bg-gray-800 border border-gray-700 rounded shadow-inner p-6 mb-6">
     <p class="text-gray-500 text-sm mb-2">
        [Utworzono: <%= @post.created_at.strftime("%d-%m-%Y %H:%M:%S") %>]
         [Autor: <%= @post.user&.email || "Nieznany" %>]
        [Opublikowany: <%= @post.published ? "TAK" : "NIE" %>]
        </p>
    
    <h1 class="text-3xl font-bold mb-2 whitespace-nowrap">
        <span class="text-gray-500 text-sm align-middle mr-2">tytuł:</span>
        <span class="font-bold text-green-400 overflow-hidden border-r-2 border-green-400 animate-typing-show">
            <%= @post.title %>
        </span>
    </h1>

   
    <!-- Treść posta -->
    <p class="text-gray-300 mb-3 ">
      <%= simple_format(@post.body) %>
    </p>

  </article>

  <!-- Komentarze -->
  <section class="mb-6">
    <h2 class="text-2xl font-semibold text-green-400 mb-4">💬 Komentarze</h2>
    <% if @post.comments.any? %>
      <div class="space-y-3">
        <% @post.comments.order(created_at: :desc).each do |comment| %>
          <div class="bg-gray-800 border border-gray-700 rounded p-3">
            <p class="font-semibold text-cyan-400">
              <%= comment.author %> • 
              <span class="text-gray-500 text-sm"><%= comment.created_at.strftime("%d-%m-%Y %H:%M:%S") %></span>
            </p>
            <p class="text-gray-300 mt-1"><%= simple_format(comment.content) %></p>
            <% if user_signed_in? && (current_user.writer? || current_user.admin?) %>
            <div class="mt-2">
              <%= button_to "Usuń", [@post, comment], method: :delete, data: { confirm: "Na pewno?" },
                  class: "text-red-500 hover:text-red-400 text-sm px-2 py-1 rounded" %>
            </div>
             <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">Brak komentarzy. Bądź pierwszy!</p>
    <% end %>
  </section>

  <!-- Formularz dodawania komentarza -->
  <section class="mb-6">
    <h3 class="text-xl font-semibold text-green-400 mb-3">➕ Dodaj komentarz</h3>
    <%= form_with(model: [@post, @post.comments.build], local: true, class: "space-y-4") do |f| %>
      <% if @comment && @comment.errors.any? %>
        <div class="p-3 bg-red-900 text-red-300 rounded">
          <p class="font-semibold">Błędy:</p>
          <ul class="list-disc list-inside">
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :author, "Autor", class: "block font-semibold text-green-300 mb-1" %>
        <%= f.text_field :author, class: "w-full p-2 bg-gray-800 border border-gray-500 rounded text-green-200 focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div>
        <%= f.label :content, "Treść", class: "block font-semibold text-green-300 mb-1 mt-2" %>
        <%= f.text_area :content, rows: 4, class: "w-full p-2 bg-gray-800 border border-gray-500 rounded text-green-200 focus:outline-none focus:ring-2 focus:ring-green-400" %>
      </div>

      <div>
        <%= f.submit "Dodaj komentarz", class: "bg-gray-800 hover:bg-gray-700 text-green-300 hover:text-green-400 px-4 py-2 rounded transition-colors duration-200" %>
      </div>
    <% end %>
  </section>

  <hr class="border-gray-700 mb-6">
</div>
