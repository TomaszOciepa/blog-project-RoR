<h1 class="text-2xl font-bold mb-6 text-green-400">Edit User</h1>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block mb-1" %>
    <%= f.email_field :email, class: "w-full p-2 rounded bg-gray-700 text-white" %>
  </div>
  <div class="mb-4">
    <%= f.label :role, class: "block mb-1" %>
    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "w-full p-2 rounded bg-gray-700 text-white" %>
  </div>
  <%= f.submit "Update User", class: "px-4 py-2 bg-green-400 text-black rounded" %>
<% end %>
